package Static;

public class Employee {

	//Instance Variable or class level variable
	int id;
	String name;
	String companyName;
	
	
	//create constractor 
	Employee(int id, String name, String companyName){
		
		this.id = id;
		this.name = name;
		this.companyName = companyName;
	}
	
	
	//Create Method for showing Information.
	
	void displayInformation() {
		System.out.println("Id: "+ id+ " Name: "+ name +" Comapny Name: "+ companyName);
	}
}
